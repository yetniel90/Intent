<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:id="@+id/activity_main"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <ImageView

            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/nama"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:text="BUKA BROWSER "
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_below="@+id/btnpgl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="11dp"
                    android:id="@+id/btnbuka"
                    android:onClick="buka"
                    tools:ignore="OnClick"
                    android:src="@drawable/google"/>

            <ImageView
                    android:text="TELEPON"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/btnpgl"
                    android:onClick="panggil"
                    tools:ignore="OnClick"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/telp1"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

            <ImageView
                    android:text="TENTANG APLIKASI"
                    android:layout_below="@+id/btnbuka"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:id="@+id/btninfo"
                    android:onClick="tentang"
                    tools:ignore="OnClick"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/kk"/>

            <ImageView
                    android:text="Kamera"
                    android:id="@+id/kamera"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/kamera"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:onClick="camera"
                    tools:ignore="OnClick"
            />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>